{% extends "UM2UserBundle::layout.html.twig" %}

{% block user_content %}

	{% if error %}
    	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form action=" {{ path('um2_user_login') }}" method="post">
		<div class="form-group">
			<input class="form-control" placeholder="Adresse email" required name="_username" type="text" value=" {{ last_username }}">
    	</div>
    	<div class="form-group">
    		<input class="form-control" placeholder="Votre mot de passe" required name="_password" type="password">
    	</div>
    	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    	<div>
	        <input type="submit" class="btn btn-succes" value="Se connecter" />
	    </div>
	</form>

{% endblock user_content %}