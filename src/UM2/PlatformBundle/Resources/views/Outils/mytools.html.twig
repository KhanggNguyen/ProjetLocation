{% extends "UM2CoreBundle::layout.html.twig" %}

{% block body %}

	<h2>Mes annonces</h2>

	<ul>
		{% for outil in listOutils %}
			<li>
				<a href=" {{path('um2_outil_view', {'id' : outil.id}) }}">
					{{ outil.titre }}
				</a>
				par {{ outil.vendeur.username }}, 
				le {{ outil.date|date('d/m/Y') }}
				<p>L'état de l'annonce : {% if outil.active %} activé {% else %} désactivé {% endif %} </p>
			</li>
			{% else %}
			 <li> Pas (encore!) d'annonces</li>
		{% endfor %}
	</ul>

	<ul class="pagination">
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('um2_core_home', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>

{% endblock body %}