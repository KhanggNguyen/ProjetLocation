{% extends "UM2CoreBundle::layout.html.twig" %}

{% block body %}

	<h2>Liste des services</h2>

	<ul>
		{% for service in listServices %}
			{% if service.active %}
			<li>
				<a href=" {{path('um2_service_view', {'id' : service.id}) }}">
					{{ service.titre }}
				</a>
				par {{ service.vendeur.username }}, 
				le {{ service.date|date('d/m/Y') }}
			</li>
			{% endif %}
			{% else %}
			 <li> Pas (encore!) de services</li>
		{% endfor %}
	</ul>

	<ul class="pagination">
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('um2_core_home', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>

{% endblock body %}